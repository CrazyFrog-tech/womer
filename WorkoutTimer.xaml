<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="womer.WorkoutTimer"
             Title="Workout Timer">
    <Grid>
        <Image
        Source="mountainpeak1.jpg"
        Aspect="AspectFit"
        HorizontalOptions="Start"/>
        <VerticalStackLayout Padding="20" Spacing="2">
            <Label
             Text="Work"
             FontSize="48"
             FontAttributes="Bold"
             HorizontalOptions="Center"
             VerticalOptions="Center"
             Margin="0,0,0,0"/>
            <Entry 
            x:Name="WorkTimeLabel"
            Text="00:00"
            FontSize="48"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            HorizontalTextAlignment="Center"
            Unfocused="workTimeLabel_Unfocused"
            Margin="0,0,0,20"/>
            <BoxView
                HeightRequest="2"
                Color="#DDDDDD"
                Margin="8,0,8,18" />

            <Label
             Text="Rest"
             FontSize="48"
             FontAttributes="Bold"
             HorizontalOptions="Center"
             VerticalOptions="Center"
             Margin="0,0,0,0"/>

            <Entry 
            x:Name="RestTimeLabel"
            Text="00:00"
            FontSize="48"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            HorizontalTextAlignment="Center"
            Unfocused="restTimeLabel_Unfocused"
            Margin="0,0,0,20"/>
            <BoxView
                HeightRequest="2"
                Color="#DDDDDD"
                Margin="8,0,8,18" />

            <Label
            Text="Sets"
            FontSize="48"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,0,0,0"/>

            <Entry 
            x:Name="SetsTimeLabel"
            Text="0"
            FontSize="48"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            HorizontalTextAlignment="Center"
            Unfocused="setsTimeLabel_Unfocused"
            Margin="0,0,0,20"/> 
            <BoxView
            HeightRequest="2"
            Color="#DDDDDD"
            Margin="8,0,8,18" />
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button Text="Start" Clicked="StartButton_Clicked" />
                <Button Text="Pause" Clicked="PauseButton_Clicked" />
                <Button Text="Reset" Clicked="ResetButton_Clicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>